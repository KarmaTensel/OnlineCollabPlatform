<div class="container-fluid py-5 px-5">
  <div class="row">

    <div class="col-4">
      <div class="profile-picture no-profile-picture"></div>
    </div>

    <div class="col-8">
    
      <h1><%= @user.email %></h1>
      <h2>Bio</h2>
      <% unless current_user.user? %>
        <p><strong>Role: </strong><%= @user.role %></p>
      <% end %>

      <br>

      <% if current_user.id == @user.id %>
        <%= link_to 'Edit My profile', edit_user_path, method: :edit, class:"btn btn-primary" %>
      <% end %>

      <br>
      <br>

      <p> You have <strong><%= pluralize(Post.draft_count, 'post')%></strong> in your draft. </p>

    </div>

  </div>
</div>