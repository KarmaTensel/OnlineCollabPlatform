<div id="comment-form">
    <%= form_for @comment do |f| %>
        <h3><%= f.label :Add_Comment %></h3>
        <hr>
        <%= f.label :body, class: "form-label" %>
        <%= f.rich_text_area :body, class: "form-control", placeholder: "Say something" %>
        <br>
        <div class="actions">
            <%= f.submit class:"btn btn-success"%>
        </div>
    <% end %>
</div>