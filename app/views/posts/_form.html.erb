<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class:"form-control", placeholder:"Provide a overall idea of the problem." %>
  </div>

  <div class="field mb-3">
    <%= form.label :content, class: "form-label" %>
    <%= form.rich_text_area :content, class:"form-control", placeholder:"Provide the details of the problem." %>
  </div>

  <div class="field mb-3">
    <%= form.label :tags, class: "form-label" %>
    <%= form.text_field :tags, class:"form-control", placeholder:"eg., networking, linux, rails-framework, python, etc."%>
  </div>

  <div class="field mb-3">
    <%= form.label :status %><br>
    <%= form.select :status, ['Publish', 'Draft', 'Archive'], selected: 'Publish' %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-success"%>
  </div>
  
<% end %>
